  "variables": {
    "air_temp": {
      "display": "Temperature",
      "units": "Celsius",
      "thresholds": { "warning": 30, "danger": 35 }
    },
    "wind_speed": {
      "display": "Wind Speed",
      "units": "m/s",
      "thresholds": null
    },
    "wind_direction": {
      "display": "Wind Direction",
      "units": "Degrees",
      "thresholds": null
    },
    "dew_point_temperature": {
      "display": "Dew Point",
      "units": "Celsius",
      "thresholds": null
    },
    "ozone_concentration": {
      "display": "Ozone",
      "units": "ppb",
      "thresholds": { "warning": 50, "danger": 70 }
    },
    "PM_25_concentration": {
      "display": "PM2.5",
      "units": "ug/m3",
      "thresholds": { "warning": 35, "danger": 55 }
    },
    "NOx_concentration": {
      "display": "NOx",
      "units": "ppb",
      "thresholds": { "warning": 100, "danger": 150 }
    },
    "NO_concentration": {
      "display": "NO",
      "units": "ppb",
      "thresholds": { "warning": 100, "danger": 150 }
    },
    "pressure": {
      "display": "Pressure",
      "units": "Pascals",
      "thresholds": null
    },
    "sea_level_pressure": {
      "display": "Sea Level Pressure",
      "units": "Pascals",
      "thresholds": null
    },
    "altimeter": {
      "display": "Altimeter",
      "units": "Pascals",
      "thresholds": null
    },
    "soil_temp": {
      "display": "Soil Temperature",
      "units": "Celsius",
      "thresholds": null
    },
    "snow_depth": {
      "display": "Snow Depth",
      "units": "Millimeters",
      "thresholds": null
    },
    "solar_radiation": {
      "display": "Solar Radiation",
      "units": "W/m**2",
      "thresholds": null
    },
    "outgoing_radiation_sw": {
      "display": "Outgoing SW Radiation",
      "units": "W/m**2",
      "thresholds": null
    },
    "ceiling": {
      "display": "Ceiling",
      "units": "Meters",
      "thresholds": null
    },
    "relative_humidity": {
      "display": "Humidity",
      "units": "%",
      "thresholds": null
    }
  },

  "outlook_format": {
    "filename_pattern": "outlook_YYYYMMDD_HHMM.md",
    "required_sections": ["## Summary"],
    "max_length": 10000,
    "encoding": "utf-8"
  },

  "data_format": {
    "observation": {
      "required_fields": ["stid", "variable", "value", "date_time", "units"],
      "date_format": "ISO 8601 UTC"
    },
    "metadata": {
      "required_fields": ["stid", "name", "elevation", "latitude", "longitude"]
    }
  }
}
