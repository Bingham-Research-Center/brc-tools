# BRC Tools Environment Variables
# Copy to .env and fill in your actual values

# API Keys
SYNOPTIC_API_KEY=your_synoptic_api_key_here
FLIGHTAWARE_API_KEY=your_flightaware_api_key_here
BRC_API_KEY=your_brc_server_api_key_here
FACEBOOK_ACCESS_TOKEN=your_facebook_graph_api_token_here

# Server Configuration
BRC_SERVER_URL=https://your-server-url.com
BRC_SERVER_TIMEOUT=60

# Data Paths
DATA_ROOT=./data
TMP_DIR=/tmp

# Optional: Model Data Settings
HERBIE_CACHE_DIR=~/data/herbie_cache
MODEL_DOWNLOAD_THREADS=4

# Optional: Debug Settings
DEBUG=false
VERBOSE=false