# BRC Tools Environment Variables
# Copy to .env and fill in your actual values

# API Keys
SYNOPTIC_API_KEY=your_synoptic_api_key_here
FLIGHTAWARE_API_KEY=your_flightaware_api_key_here
FLIGHTRADAR24_API_KEY=your_flightradar24_api_key_here

# Data Upload API Key (64 characters) - for sending data to website
DATA_UPLOAD_API_KEY=your_64_character_data_upload_api_key_here_abcdef1234567890

# Server Configuration
BRC_SERVER_URL=https://your-server-url.com
BRC_SERVER_TIMEOUT=60

# CHPC Deployment Settings
CHPC_USER=your_username
CHPC_HOST=chpc.utah.edu
CHPC_PROJECT_DIR=/uufs/chpc.utah.edu/common/home/your_username/brc-tools

# Data Paths
DATA_ROOT=./data
TMP_DIR=/tmp

# Optional: Model Data Settings
HERBIE_CACHE_DIR=~/data/herbie_cache
MODEL_DOWNLOAD_THREADS=4

# Optional: Debug Settings
DEBUG=false
VERBOSE=false